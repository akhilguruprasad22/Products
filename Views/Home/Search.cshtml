@{
    ViewData["Title"] = "Search Products";
}
<h1>@ViewData["Title"]</h1>

<div id="DBresult">
    <table>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Size</th>
            <th>Product Price</th>
            <th>Product Mfg Date</th>
            <th>Product Category</th>
        </tr>
        @foreach(Product product in ViewBag.result)
        {
            <tr>
                <td>product.ProductId</td>
                <td>product.ProductName</td>
                <td>product.Size</td>
                <td>product.Price</td>
                <td>product.MfgDate</td>
                <td>product.Category</td>
            </tr>
        }
    </table>
</div>